<h1><%= @album.title %></h1>
<h2>By <%= link_to @album.band.band_name, band_url(@album.band) %></h2>
<form action="<%= edit_album_url %>" method="get">
  <input type="submit" value="Edit Album">
</form><br/>

<% @album.tracks.each do |track| %>
  <%= link_to track.title, track_url(track) %></br>
<% end %>

</br>
<form action="<%= new_album_track_url(@album) %>" method="get">
  <input type="submit" value="New Track">
</form>
